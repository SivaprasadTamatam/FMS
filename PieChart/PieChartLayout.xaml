            </StackPanel>
            
            <my:FMSImageButton HorizontalAlignment="Stretch" Margin="0,162,0,0" x:Name="fMSImageButton1" VerticalAlignment="Stretch" BorderThickness="1" Image="/FMS;component/UI_RES/more-details.png" Text=" More Details">
